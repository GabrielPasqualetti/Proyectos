@model RecuperatorioProg06_07.Models.VMAgencia

@{
    ViewBag.Title = "Alta";

}

<h2>Alta Medicion</h2>



<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Dia: </label>
                @Html.TextBoxFor(x => x.medicionModel.dia, htmlAttributes: new { @class = "form-control", @id = "txtDia" })
            </div>
            <div class="form-group">
                <label>Nombre de la Estacion: </label>
                @Html.DropDownListFor(x => x.medicionModel.idEstacion, new SelectList(Model.estacionesModel, "Id", "nombre"), "SELECCIONE", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Temperatura: </label>
                @Html.TextBoxFor(x => x.medicionModel.temperatura, htmlAttributes: new { @class = "form-control", @id = "txtTemperatura" })
            </div>
            <div class="form-group">
                <label>Humedad: </label>
                @Html.TextBoxFor(x => x.medicionModel.humedad, htmlAttributes: new { @class = "form-control", @id = "txtHumedad" })
            </div>
            <input type="submit" value="Aceptar" class="btn btn-primary" />
        }
    </div>
    <div class="col-md-2"></div>
</div>

