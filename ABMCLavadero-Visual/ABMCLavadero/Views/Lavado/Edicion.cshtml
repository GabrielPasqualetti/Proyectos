
@{
    ViewBag.Title = "Edición";
}

@model ABMCLavadero.Models.Lavado

<h2>Editar Lavado</h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <label>Patente</label>
                    @Html.TextBoxFor(x => x.Patente, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.CheckBoxFor(x => x.Taxi)
                    <label>Es taxi</label>
                </div>
                <div class="form-group">
                    @Html.CheckBoxFor(x => x.Habitual)
                    <label>Es cliente habitual</label>
                </div>
                @*<div class="form-group">
                    <label>Precio</label>
                    @Html.TextBoxFor(x => x.Precio, htmlAttributes: new { @class = "form-control" })
                </div>*@
                <input type="submit" value="Aceptar" class="btn btn-primary" />
        }
    </div>
    <div class="col-md-2"></div>
</div>